FROM python:3.10

# Set the working directory in the container
WORKDIR /app

# Copy the application files
COPY whisper_app /app

COPY whisper_app/requirement.txt .


RUN apt-get update && apt-get install -y git && pip install --upgrade pip && pip install git+https://github.com/openai/whisper.git && pip install -r requirement.txt

EXPOSE 8002

# Set the default command
CMD ["python", "app/whisper_app.py"]
